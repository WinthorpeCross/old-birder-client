{
  "compileOnSave": true,
  "compilerOptions": {
    "importHelpers": true,
    "baseUrl": "./",
    // "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "types": [
      "jasmine"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "es2020",
    "paths": {
      "@app/*": [
        "app/*",
        "src/app/*"
      ]
    }
  }
}